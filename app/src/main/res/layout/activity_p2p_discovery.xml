<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray">

    <!-- Header com Gradient -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_gradient_blue_purple"
        android:paddingTop="48dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Voltar"
            android:tint="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descoberta WiFi Direct"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Selecione um dispositivo para retransmitir"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.9" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Card Principal -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- BotÃ£o Iniciar Busca -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartScan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Iniciar Busca"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_wifi"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/blue_600" />

            <!-- Status da Busca -->
            <TextView
                android:id="@+id/tvScanningStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ðŸ” Procurando dispositivos prÃ³ximos..."
                android:textSize="14sp"
                android:textColor="@color/blue_600"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/divider_gray" />

            <!-- TÃ­tulo da Lista -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DISPOSITIVOS ENCONTRADOS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary" />

            <!-- RecyclerView de Dispositivos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDevices"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:clipToPadding="false" />

            <!-- Estado Vazio -->
            <LinearLayout
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_wifi"
                    android:alpha="0.3"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Nenhum dispositivo encontrado"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Clique em 'Iniciar Busca' para procurar"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:alpha="0.7" />
            </LinearLayout>

            <!-- BotÃ£o Confirmar TransmissÃ£o -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmTransmit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="Selecione um dispositivo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/purple_600" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

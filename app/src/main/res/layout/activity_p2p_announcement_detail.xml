                            android:textSize="12sp"
                            android:textColor="@color/green_600"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tempo de Recebimento -->
                <TextView
                    android:id="@+id/tvReceivedTime"
                    android:layout_width="match_parent"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_600"
        android:elevation="4dp"
        app:titleTextColor="@color/white"
        app:navigationIconTint="@color/white" />

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicionar Localização"
                android:textSize="24sp"
                android:textColor="@color/gray_900"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Defina um local para receber notificações personalizadas"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="24dp" />

            <!-- Nome do Local -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Local"
                android:layout_marginBottom="20dp"
                app:startIconDrawable="@drawable/ic_location_on"
                app:startIconTint="@color/blue_600"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Método de Detecção -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Método de Detecção"
                android:textSize="16sp"
                android:textColor="@color/gray_900"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- RadioGroup para escolha -->
            <RadioGroup
                android:id="@+id/radioGroupMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:padding="8dp">

                <!-- Opção GPS -->
                <RadioButton
                    android:id="@+id/radioGPS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GPS (Localização Geográfica)"
                    android:padding="16dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray_900"
                    android:checked="true"
                    android:buttonTint="@color/blue_600"
                    android:layout_marginBottom="8dp" />

                <!-- Opção WiFi -->
                <RadioButton
                    android:id="@+id/radioWiFi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WiFi (Rede sem fio)"
                    android:padding="16dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray_900"
                    android:buttonTint="@color/orange_600" />
            </RadioGroup>

            <!-- Container GPS (visível por padrão) -->
            <LinearLayout
                android:id="@+id/containerGPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coordenadas GPS"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700"
                    android:layout_marginBottom="8dp" />

                <!-- Latitude (somente leitura) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Latitude"
                    android:layout_marginBottom="12dp"
                    app:helperText="Será preenchida automaticamente"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editLatitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="false"
                        android:textColor="@color/gray_600"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Longitude (somente leitura) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Longitude"
                    android:layout_marginBottom="12dp"
                    app:helperText="Será preenchida automaticamente"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editLongitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="false"
                        android:textColor="@color/gray_600"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botão para obter localização -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGetLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Obter Localização Atual"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_location_on"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/blue_600"
                    android:textColor="@color/blue_600" />
            </LinearLayout>

            <!-- Container WiFi (invisível por padrão) -->
            <LinearLayout
                android:id="@+id/containerWiFi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rede WiFi"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700"
                    android:layout_marginBottom="8dp" />

                <!-- SSID WiFi -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome da Rede (SSID)"
                    android:layout_marginBottom="12dp"
                    app:startIconDrawable="@drawable/ic_wifi"
                    app:startIconTint="@color/orange_600"
                    app:helperText="Nome da rede WiFi para detecção"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editSsid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botão para detectar WiFi atual -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDetectWiFi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detectar WiFi Atual"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_wifi"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/orange_600"
                    android:textColor="@color/orange_600" />
            </LinearLayout>

            <!-- Info do Raio -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/blue_50"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/blue_600" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="O raio de detecção é fixo em 20 metros"
                        android:textSize="13sp"
                        android:textColor="@color/blue_700" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botões de Ação -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Botão Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Guardar Localização"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@color/blue_600"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_check"
                    app:iconTint="@color/white" />

                <!-- Botão Eliminar (apenas em modo edição) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:text="Eliminar Localização"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@color/error"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="@color/white"
                    android:visibility="gone" />

                <!-- ProgressBar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/blue_600" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

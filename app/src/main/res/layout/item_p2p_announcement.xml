<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Badge + Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Badge de Tipo -->
            <TextView
                android:id="@+id/tvReceivedTypeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direto"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_badge_blue"
                android:textColor="@color/blue_600"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Data/Hora Recebimento -->
            <TextView
                android:id="@+id/tvReceivedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agora mesmo"
                android:textColor="@color/gray_500"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Título do Anúncio"
            android:textColor="@color/gray_800"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Descrição -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Descrição do anúncio recebido"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Local -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:tint="@color/gray_500" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Local do anúncio"
                android:textColor="@color/gray_600"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Sender Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person"
                android:tint="@color/gray_500" />

            <TextView
                android:id="@+id/tvSender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="De: username"
                android:textColor="@color/gray_600"
                android:textSize="14sp" />

            <!-- Selo de Autenticidade -->
            <ImageView
                android:id="@+id/ivAuthenticBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_verified"
                android:tint="@color/blue_600"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Footer: Ações -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Contador de Retransmissões -->
            <TextView
                android:id="@+id/tvRetransmissionCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Retransmitido 0x"
                android:textColor="@color/gray_500"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Botão Retransmitir (só para mula) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetransmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Retransmitir"
                android:textColor="@color/orange_600"
                app:strokeColor="@color/orange_600"
                app:icon="@drawable/ic_send"
                app:iconTint="@color/orange_600"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- Botão Ver Detalhes -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Ver Detalhes"
                android:backgroundTint="@color/blue_600"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

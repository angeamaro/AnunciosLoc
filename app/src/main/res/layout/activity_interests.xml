<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.view.InterestsActivity">

    <!-- TOPO FIXO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/bg_gradient_blue">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_heart" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meus Interesses"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personalize a sua experiência"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- SCROLL GERAL PARA O RESTO -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- BARRA DE PESQUISA -->
            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:padding="12dp"
                android:hint="Pesquisar interesse..."
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/text_secondary" />

            <!-- MINI SCROLL DA LISTA DE PARES -->

            <!-- BOX DE INFO -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:fillViewport="false"
                android:scrollbars="vertical">

                <GridLayout
                    android:id="@+id/listaPares"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="4dp">

                    <!-- ITEM EXEMPLO 1 -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="1"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_item_par"
                        android:padding="12dp"
                        android:text="Exemplo 1"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <!-- ITEM EXEMPLO 2 -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="1"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_item_par"
                        android:padding="12dp"
                        android:text="Exemplo 2"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </GridLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="#E9F2FF"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Por que adicionar dados?"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esses dados ajudam a personalizar sua experiência."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- INPUT CHAVE -->
            <EditText
                android:id="@+id/editChave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:hint="Chave (ex: Profissão)"
                android:textColor="@android:color/black" />

            <!-- INPUT VALOR -->
            <EditText
                android:id="@+id/editValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:hint="Valor (ex: Engenheiro)"
                android:textColor="@android:color/black" />

            <!-- BOTÃO SALVAR -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Salvar"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="12dp"
                app:backgroundTint="@color/blue_600" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

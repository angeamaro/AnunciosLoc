<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header com título e botão guardar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Título do Anúncio"
                android:textColor="@color/gray_900"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_favorite"
                android:background="@drawable/bg_circle_gray"
                android:contentDescription="Guardar"
                android:padding="8dp"
                app:tint="@color/gray_400" />
        </LinearLayout>

        <!-- Conteúdo do anúncio -->
        <TextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição do anúncio..."
            android:textColor="@color/gray_700"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Informações do anúncio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Localização -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_location_on"
                    app:tint="@color/gray_500" />

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Localização"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Autor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/gray_500" />

                <TextView
                    android:id="@+id/txtAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Autor"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Data -->
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/03/2025"
                android:textColor="@color/gray_400"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Botão Ver Detalhes -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewDetails"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Ver Detalhes"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_info"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="@color/blue_600"
            app:cornerRadius="10dp"
            app:elevation="0dp" />

        <!-- Badge Guardado (inicialmente oculto) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Guardado"
            android:textColor="@color/orange_600"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/gray_100"
            app:chipCornerRadius="8dp"
            app:chipMinHeight="28dp"
            app:chipStrokeWidth="0dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

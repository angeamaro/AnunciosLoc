<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_blue_purple"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- BotÃ£o Voltar -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Voltar"
            android:padding="10dp"
            app:tint="@color/white"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <!-- TÃ­tulo do Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Detalhes do AnÃºncio"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium" />
    </RelativeLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Card com Badge -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Badge Ativo/Expirado -->
                    <TextView
                        android:id="@+id/badgeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ativo"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/bg_badge_orange"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginBottom="12dp" />

                    <!-- TÃ­tulo -->
                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TÃ­tulo do AnÃºncio"
                        android:textColor="@color/gray_900"
                        android:textSize="22sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <!-- Autor -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/gray_500" />

                        <TextView
                            android:id="@+id/txtAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="JoÃ£o Silva"
                            android:textColor="@color/gray_600"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Tempo Restante -->
                    <TextView
                        android:id="@+id/txtTimeRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â±ï¸ Expira em 2 horas"
                        android:textColor="@color/orange_600"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:visibility="visible" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ConteÃºdo Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DescriÃ§Ã£o"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="true"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/txtContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ConteÃºdo completo do anÃºncio..."
                        android:textColor="@color/gray_900"
                        android:textSize="15sp"
                        android:lineSpacingMultiplier="1.4" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- LocalizaÃ§Ã£o Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LocalizaÃ§Ã£o"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="true"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_location_on"
                            android:contentDescription="LocalizaÃ§Ã£o"
                            android:padding="8dp"
                            android:background="@drawable/bg_circle_blue"
                            app:tint="@color/blue_600" />

                        <TextView
                            android:id="@+id/txtLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Largo da IndependÃªncia"
                            android:textColor="@color/gray_900"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- InformaÃ§Ãµes Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="InformaÃ§Ãµes"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="true"
                        android:layout_marginBottom="12dp" />

                    <!-- Data PublicaÃ§Ã£o -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Publicado:"
                            android:textColor="@color/gray_500"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtCreatedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="04/11/2025 Ã s 14:30"
                            android:textColor="@color/gray_900"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Data InÃ­cio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="InÃ­cio:"
                            android:textColor="@color/gray_500"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtStartDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="04/11/2025 Ã s 15:00"
                            android:textColor="@color/gray_900"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Data TÃ©rmino -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="TÃ©rmino:"
                            android:textColor="@color/gray_500"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtEndDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="05/11/2025 Ã s 15:00"
                            android:textColor="@color/gray_900"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_200"
                        android:layout_marginVertical="8dp" />

                    <!-- PolÃ­tica -->
                    <TextView
                        android:id="@+id/txtPolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ PolÃ­tica: Todos os usuÃ¡rios"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- AÃ§Ãµes (apenas para autor) -->
            <LinearLayout
                android:id="@+id/layoutActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Editar AnÃºncio"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:backgroundTint="@color/blue_600"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_edit"
                    app:iconSize="20dp"
                    app:iconTint="@color/white"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Eliminar AnÃºncio"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:backgroundTint="@color/error"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_delete"
                    app:iconSize="20dp"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/blue_600" />

</LinearLayout>

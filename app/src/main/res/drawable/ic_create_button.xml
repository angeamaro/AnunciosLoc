<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Círculo azul de fundo -->
    <item
        android:width="56dp"
        android:height="56dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/blue_600"/>
            <size
                android:width="56dp"
                android:height="56dp"/>
        </shape>
    </item>
    
    <!-- Ícone de adicionar branco -->
    <item
        android:width="24dp"
        android:height="24dp"
        android:gravity="center"
        android:drawable="@drawable/ic_add_white"/>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PermissÃµes -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnunciosLoc">
        
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        
        <!-- Splash Screen (Launcher) -->
        <activity
            android:name=".ui.view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AnunciosLoc">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- Main Activity -->
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="false" />
        
        <!-- Authentication Activities -->
        <activity
            android:name=".ui.view.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".ui.view.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".ui.view.ForgotPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Location Activities -->
        <activity
            android:name=".ui.view.AddLocationActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".ui.view.MainActivity" />
        
        <!-- Announcement Activities -->
        <activity
            android:name=".ui.view.CreateAnnouncementActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".ui.view.MainActivity" />
        
        <activity
            android:name=".ui.view.AnnouncementDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.view.MainActivity" />
        
        <activity
            android:name=".ui.view.ConfigurePolicyActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".ui.view.CreateAnnouncementActivity" />
        
        <!-- Menu Options Activity -->
        <activity
            android:name=".ui.view.MenuOptionsActivity"
            android:exported="false"
            android:parentActivityName=".ui.view.MainActivity" />
        
        <!-- Interests Activities -->
        <activity
            android:name=".ui.view.InterestsActivity"
            android:exported="false"
            android:parentActivityName=".ui.view.MenuOptionsActivity" />
        
        <activity
            android:name=".ui.view.InterestValuesActivity"
            android:exported="false"
            android:parentActivityName=".ui.view.InterestsActivity" />
        
        <!-- Policies Activity -->
        <activity
            android:name=".ui.view.PoliciesActivity"
            android:exported="false"
            android:parentActivityName=".ui.view.MenuOptionsActivity" />
        
    </application>

</manifest>